<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.a1691589.td_canada.Main3Activity">

    <LinearLayout
        android:layout_width="416dp"
        android:layout_height="662dp"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        android:background="#F0EFF5"

        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"

        >


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:background="#1B5336"
            android:orientation="horizontal"
            >

            <ImageView
                android:id="@+id/imageView"
                android:layout_width="31dp"
                android:layout_height="31dp"
                android:layout_marginLeft="-9dp"
                android:layout_marginTop="8dp"
                app:srcCompat="@drawable/bar" />

            <ImageView
                android:id="@+id/imageView2"
                android:layout_width="37dp"
                android:layout_height="37dp"
                android:layout_marginLeft="-11dp"
                android:layout_marginTop="6dp"
                app:srcCompat="@drawable/td" />

            <TextView
                android:id="@+id/textView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:layout_weight="1"
                android:text="Bills"
                android:textColor="#ffffff"
                android:textSize="17dp" />


        </LinearLayout>

        <LinearLayout

            android:layout_width="415dp"
            android:layout_height="72dp"

            android:layout_marginTop="15dp"
            android:background="#d3d3d3"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/imageView19"
                android:layout_width="58dp"
                android:layout_height="70dp"
                android:background="#FFFF"
                android:layout_weight="1"
                android:layout_marginTop="1dp"
                android:padding="18dp"
                app:srcCompat="@drawable/canada" />

            <LinearLayout
                android:layout_width="325dp"
                android:layout_height="70dp"
                android:background="#FFFF"
                android:layout_marginTop="1dp"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/textView16"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="18dp"
                    android:textColor="#000"
                    android:layout_marginTop="15dp"

                    android:text="Pay Bills " />

                <TextView
                    android:id="@+id/textView15"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="2dp"
                    android:text="Pay a Canadian bill" />
            </LinearLayout>




        </LinearLayout>

        <LinearLayout
            android:layout_width="415dp"
            android:layout_height="71dp"
            android:layout_marginTop="0.1dp"
            android:background="#d3d3d3"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/imageView20"
                android:layout_width="68dp"
                android:layout_height="70dp"
                android:background="#FFFF"
                android:layout_weight="1"

                android:padding="18dp"
                app:srcCompat="@drawable/usbills" />

            <LinearLayout
                android:layout_width="325dp"
                android:layout_height="70dp"
                android:background="#FFFF"

                android:orientation="vertical">

                <TextView
                    android:id="@+id/textView18"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="18dp"
                    android:textColor="#000"
                    android:text="Pay U.S. Bills"
                    android:layout_marginTop="15dp" />

                <TextView
                    android:id="@+id/textView17"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="2dp"
                    android:text="Pay a U.S.bill"/>
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="415dp"
            android:layout_height="71dp"

            android:background="#d3d3d3"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/imageView21"
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:background="#FFFF"
                android:layout_weight="1"

                android:padding="18dp"
                app:srcCompat="@drawable/manage" />

            <LinearLayout
                android:layout_width="325dp"
                android:layout_height="70dp"
                android:background="#FFFF"

                android:orientation="vertical">

                <TextView
                    android:id="@+id/textView20"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="18dp"
                    android:textColor="#000"
                    android:text="Manage Payees"
                    android:layout_marginTop="15dp" />

                <TextView
                    android:id="@+id/textView19"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="2dp"
                    android:text="Add,edit or delete a Canadian or U.S.Payee. " />
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="415dp"
            android:layout_height="80dp"
            android:layout_marginTop="0.1dp"
            android:background="#d3d3d3"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/imageView22"
                android:layout_width="68dp"
                android:layout_height="79dp"
                android:background="#FFFF"
                android:layout_weight="1"

                android:padding="18dp"
                app:srcCompat="@drawable/payments" />

            <LinearLayout
                android:layout_width="325dp"
                android:layout_height="79dp"
                android:background="#FFFF"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/textView22"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="18dp"
                    android:textColor="#000"
                    android:text="Scheduled Payments"
                    android:layout_marginTop="10dp" />

                <TextView
                    android:id="@+id/textView21"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="2dp"
                    android:layout_marginRight="2dp"
                    android:text="View/cancel pending Canadian payments or same- " />

                <TextView
                    android:id="@+id/textView23"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="2dp"
                    android:layout_marginRight="2dp"
                    android:text="day U.S.payments" />
            </LinearLayout>
        </LinearLayout>


    </LinearLayout>








</android.support.constraint.ConstraintLayout>
