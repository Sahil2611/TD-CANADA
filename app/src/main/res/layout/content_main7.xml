<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.example.a1691589.td_canada.Main7Activity"
    tools:showIn="@layout/activity_main7">

    <LinearLayout
        android:layout_width="410dp"
        android:layout_height="662dp"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        android:background="#F0EFF5"

        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent">



        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:background="#1B5336"
            android:orientation="horizontal"
            >

            <ImageView
                android:id="@+id/imageView"
                android:layout_width="31dp"
                android:layout_height="31dp"
                android:layout_marginLeft="-9dp"
                android:layout_marginTop="8dp"
                app:srcCompat="@drawable/bar" />

            <ImageView
                android:id="@+id/imageView2"
                android:layout_width="37dp"
                android:layout_height="37dp"
                android:layout_marginLeft="-11dp"
                android:layout_marginTop="6dp"
                app:srcCompat="@drawable/td" />

            <TextView
                android:id="@+id/textView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:layout_weight="1"
                android:text="Mobile Deposit"
                android:textColor="#ffffff"
                android:textSize="17dp" />


        </LinearLayout>


        <LinearLayout

            android:layout_width="415dp"
            android:layout_height="95dp"

            android:layout_marginTop="16dp"
            android:background="#d3d3d3"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/imageView19"
                android:layout_width="58dp"
                android:layout_height="93dp"
                android:background="#FFFF"
                android:layout_weight="1"
                android:layout_marginTop="1dp"
                android:paddingBottom="35dp"
                android:paddingLeft="20dp"
                android:paddingRight="20dp"
                android:paddingTop="15dp"

                app:srcCompat="@drawable/camera" />

            <LinearLayout
                android:layout_width="325dp"
                android:layout_height="93dp"
                android:background="#FFFF"
                android:layout_marginTop="1dp"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/textView16"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="18dp"
                    android:textColor="#000"
                    android:layout_marginTop="15dp"

                    android:text="Deposit Cheque" />

                <TextView
                    android:id="@+id/textView15"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="1dp"
                    android:text="Take a photo of your cheque to" />

                <TextView
                    android:id="@+id/textView24"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="1dp"
                    android:text="deposit it to your account"/>

            </LinearLayout>


        </LinearLayout>

        <LinearLayout
            android:layout_width="415dp"
            android:layout_height="95dp"
            android:id="@+id/fe"
            android:background="#d3d3d3"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/imageView18"
                android:layout_width="58dp"
                android:layout_height="93dp"
                android:background="#FFFF"
                android:layout_weight="1"
                android:layout_marginTop="1dp"
                android:paddingBottom="37dp"
                android:paddingLeft="25dp"
                android:paddingRight="25dp"
                android:paddingTop="17dp"

                app:srcCompat="@drawable/history" />

            <LinearLayout

                android:layout_width="325dp"
                android:layout_height="93dp"
                android:background="#FFFF"

                android:layout_marginTop="1dp"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/textView27"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="15dp"
                    android:text="Mobile Deposit History"
                    android:textColor="#000"


                    android:textSize="18dp" />

                <TextView
                    android:id="@+id/textView26"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="1dp"
                    android:text="View a recent history of your"  />

                <TextView
                    android:id="@+id/textView25"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="1dp"
                    android:text="mobile deposits"/>
            </LinearLayout>
        </LinearLayout>


    </LinearLayout>
</RelativeLayout>
